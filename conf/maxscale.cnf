[maxscale]
threads           = auto
log_augmentation  = 1
ms_timestamp      = 1
syslog            = 1
admin_host        = 0.0.0.0
admin_port        = 8989
admin_auth        = 1
admin_enabled     = 1
admin_secure_gui  = false

########################
# Server list
########################
[server1]
type              = server
address           = mysql-master
port              = 3301
protocol          = MariaDBBackend

[server2]
type              = server
address           = mysql-slave1
port              = 3302
protocol          = MariaDBBackend


#########################
# Monitor for the servers
#########################
[MariaDB-Monitor]
type              = monitor
module            = mariadbmon
servers           = server1,server2
user              = maxuser
password          = maxpwd
monitor_interval  = 2000ms
auto_failover     = true
auto_rejoin       = true
enforce_read_only_slaves = 1


#########################
# Service definitions for read/write splitting and read-only services.
#########################
[Read-Only-Service]
type              = service
router            = readconnroute
servers           = server1,server2
user              = maxuser
password          = maxpwd
router_options    = slave

[Read-Write-Service]
type              = service
router            = readwritesplit
servers           = server1,server2
user              = maxuser
password          = maxpwd

##########################
# Listener definitions for the service
# Listeners represent the ports the service will listen on.
##########################
[Read-Only-Listener]
type              = listener
service           = Read-Only-Service
protocol          = MariaDBClient
port              = 6030

[Read-Write-Listener]
type              = listener
service           = Read-Write-Service
protocol          = MariaDBClient
port              = 6033